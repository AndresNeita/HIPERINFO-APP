<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/primeraParte"
        android:layout_width="476dp"
        android:layout_height="297dp"
        android:background="@drawable/ri_on"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/scrolling"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="75dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="82dp"
            android:background="#00000000"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />


    </RelativeLayout>

    <!--segunda parte  -->

    <ScrollView
        android:background="#FFFFFF"
        android:id="@+id/scrolling"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/primeraParte"
        app:layout_constraintBottom_toTopOf="@+id/btn1">

        <LinearLayout
            android:id="@+id/segundaParte"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:text="Diabetes"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="27sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="306dp" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Epidemiología "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/textView4"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="El 50% de los pacientes con diabetes desarrollan enfermedad renal crónica "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="71dp"
                    android:layout_height="81dp"
                    android:layout_alignEnd="@id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="294dp"

                    app:srcCompat="@drawable/examen" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="358dp"
                android:layout_height="228dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="200dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Riesgo "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="266dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/textView5"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="El riesgo de desarrollar enfermedad renal crónica si se padece diabetes aumenta si:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="266dp"
                    android:layout_height="59dp"
                    android:layout_below="@id/textView6"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text=" 1) Tiene 60 años o más"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="266dp"
                    android:layout_height="59dp"
                    android:layout_below="@id/textView11"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text=" 2) Tiene presión sanguínea alta"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text=" 3) Tiene un familiar que padece insuficiencia renal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="87dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="286dp"

                    app:srcCompat="@drawable/familia" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="200dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Pacientes"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="248dp"
                    android:layout_height="86dp"
                    android:layout_below="@id/textView9"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-31dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Los pacientes con diabetes pueden prevenir la enfermedad renal crónica:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="266dp"
                    android:layout_height="69dp"
                    android:layout_below="@id/textView10"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="1) Controlando su nivel de azúcar en la sangre"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="266dp"
                    android:layout_height="69dp"
                    android:layout_below="@id/textView14"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="2) Manteniendo la presión sanguínea bajo control"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="266dp"
                    android:layout_height="89dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/textView15"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="3) Pidiéndole a su médico que le realice pruebas para detectar la enfermedad renal al menos una vez por año"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="266dp"
                    android:layout_height="69dp"
                    android:layout_below="@id/textView16"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="4) Haciendo ejercicio con regularidad"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="266dp"
                    android:layout_height="69dp"
                    android:layout_below="@id/textView17"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="5) Evitando el consumo de alcohol"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView18"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="29dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="6) No fumando"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView19"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="para mayor información sobre diabetes consulte:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView21"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="https://www.amdiabetes.org/"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginBottom="50dp"
                    android:layout_below="@id/textView21"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="2dp"

                    app:srcCompat="@drawable/icon" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="74dp"
                    android:layout_height="84dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="282dp"

                    app:srcCompat="@drawable/analitica" />


            </RelativeLayout>




        </LinearLayout>

    </ScrollView>



    <Button
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn1"
        >

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>

