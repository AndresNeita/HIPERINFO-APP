<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Afectaciones">

    <RelativeLayout
        android:id="@+id/primeraParte"
        android:layout_width="476dp"
        android:layout_height="297dp"
        android:background="@drawable/ri_on"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/scrolling"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="75dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="82dp"
            android:background="#00000000"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />


    </RelativeLayout>

    <!--segunda parte  -->

    <ScrollView
        android:background="#FFFFFF"
        android:id="@+id/scrolling"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/primeraParte"
        app:layout_constraintBottom_toTopOf="@+id/btn1">

        <LinearLayout
            android:id="@+id/segundaParte"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:text="¿Cómo afecta?"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="27sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="306dp"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Paciente"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:layout_marginLeft="100dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Los síntomas de la enfermedad limitan las actividades físicas, interfieren en las actividades diarias, intensifican el dolor y su efecto en trabajos habituales hace que el paciente perciba como 'malo' su estado de salud (Perales et al., 2016). "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="71dp"
                    android:layout_height="87dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="294dp"
                    app:srcCompat="@drawable/examen" />
            </RelativeLayout>


            <RelativeLayout

                android:layout_width="358dp"
                android:layout_height="228dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Familia"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:layout_marginLeft="100dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Los cuidadores de los pacientes suelen tener una percepción negativa de su salud psicológica, debido a que el cuidador por pasar mucho más tiempo con la persona enferma está más concetado con el impacto que tiene la enfermedad sobre la persona que cuida y a medida que esta avanza causa deterioro y genera sentimientos negativos en el cuidador (Romero, 2018)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <ImageView

                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="87dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="286dp"

                    app:srcCompat="@drawable/familia" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="Economía"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView9"
                    android:layout_marginLeft="100dp"
                    android:background="@color/white"
                    android:padding="10sp"
                    android:text="ERC es una enfermedad muy costosa. La carga económica está relacionada con la alta prevalencia y las comorbilidades asociadas. El costo promedio anual del paciente con enfermedad renal crónica manejado con hemodiálisis varía entre $223,183 y $257,000 MXN; el costo en la vida es de $1,000,968 MXN"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="74dp"
                    android:layout_height="84dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="282dp"
                    app:srcCompat="@drawable/analitica" />
            </RelativeLayout>


            <RelativeLayout

                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="40dp">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:padding="10sp"
                android:text="Sistema de salud"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView0"
                android:layout_below="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@color/white"
                android:padding="10sp"
                android:text="Es una carga económica para los sistemas de salud cual la convierte es un importante problema de salud pública a nivel mundial. Es la causa de muerte número 18 a nivel mundial. Para la institución de salud, el costo total de 5 años de atención de un paciente en hemodiálisis es de $1,198,968 MXN, y el costo anual varía entre $223,183 y $257,000 MXN"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="74dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="282dp"
                app:srcCompat="@drawable/cuidadodelasalud" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn1"/>

</androidx.constraintlayout.widget.ConstraintLayout>